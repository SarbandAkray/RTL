{
  "name": "rtl",
  "displayName": "RTL",
  "description": "an extention to make the code editor go from ltr to rtl with one line or all lines",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:markdown-preview-editor.classicEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdown-preview-editor.classicEditor",
        "displayName": "krd editor",
        "selector": [
          {
            "filenamePattern": "*.rtl.*"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^10.2.0",
    "typescript": "^4.4.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-alignment": "^40.2.0",
    "@ckeditor/ckeditor5-angular": "^7.0.1",
    "@ckeditor/ckeditor5-build-classic": "^40.2.0",
    "ckeditor5-build-vsce": "^29.0.1"
  }
}
